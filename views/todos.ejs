<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="css/bootstrap.css">
    <link rel="stylesheet" href="css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
</head>
<body>
    <section id="navbar">
        <nav class="navbar navbar-expand-lg bg-light">
            <div class="container-fluid">
                <i class="fa fa-fw fa-clipboard-list"></i>
              <a class="navbar-brand" href="/">TODO</a>
               
              <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
              </button>
              <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0"></ul>
                <div class="d-grid gap-2 d-md-block">
                    <a href="/logout"><button class="btn btn-primary" type="button">Logout</button></a>
                  </div>
              </div>
            </div>
          </nav>
    </section>

    <h1>Things To Do:</h1>

    <!-- Things to do -->
 
                <!-- High Priority Tasks -->
                <div class="container text-center">
                    <h2>You have <%= left %> things left.</h2>
                    <div class="row align-items-start">
                      <div class="col">
                        <h3>High Priority Tasks</h3>
                        <ul>
                        <% todos.forEach( el => { %>
                            <% if(el.completed === false){ %>
                                <li class='todoItem' data-id='<%=el._id%>'>
                                    <span class='not'><%= el.todo %></span> 
                                    <span class='fa fa-arrow-up'></span>
                                    <span class='fa fa-arrow-down'></span>
                                    <span class='del fa fa-trash-alt'></span>
                                    <% } %>
                                </li>
                        <% }) %>    
                        </ul>
                      </div>
                <!-- Medium Priority Tasks -->
                      <div class="col">
                        <h3>Medium Priority Tasks</h3>
                        <ul>
                        <% todos.forEach( el => { %>
                            <% if(el.completed === false){ %>
                                <li class='todoItem' data-id='<%=el._id%>'>
                                    <span class='not'><%= el.todo %></span> 
                                    <span class='fa fa-arrow-up'></span>
                                    <span class='fa fa-arrow-down'></span>
                                    <span class='del fa fa-trash-alt'></span>
                                    <% } %>
                                </li>
                        <% }) %>    
                        </ul>
                      </div>
                <!-- Low Priority Tasks -->
                      <div class="col">
                        <h3>Low Priority Tasks</h3>
                        <ul>
                        <% todos.forEach( el => { %>
                            <% if(el.completed === false){ %>
                                <li class='todoItem' data-id='<%=el._id%>'>
                                    <span class='not'><%= el.todo %></span> 
                                    <span class='fa fa-arrow-up'></span>
                                    <span class='fa fa-arrow-down'></span>
                                    <span class='del fa fa-trash-alt'></span>
                                    <% } %>
                                </li>
                        <% }) %>    
                        </ul>
                      </div>
                    </div>
                    
        <!-- submit new todo form  -->
        <div id="formAndCompleted"class="container text-center border">
            <div class="row align-items-start">
                <div class="col">
                    <h3>Add New Task</h3>
                    <form action="/todos/createTodo" method='POST'>
                        <div class="mb-3 submitTodo">
                            <input class="form-control" type="text" placeholder="Enter Todo Item" name='todoItem'>
                        </div>          
                        <select class="form-select mb-3 submitTodo" aria-label="Default select example">
                            <option selected>Priority</option>
                            <option value="">High</option>
                            <option value="">Medium</option>
                            <option value="">Low</option>
                        </select>
                        <input class="btn btn-primary" type="submit">
                    </form> 
                </div>
        <!-- Things that are completed -->
                <div id="completedTaskBox" class="col">
                    <% if(done > 0) { %>
                        <h2>You have completed <%= done %> things.</h2>
                    <% } %>
                    <ul>
                        <% todos.forEach( el => { %>
                            <% if(el.completed === true){ %>
                                <li class='todoItem' data-id='<%=el._id%>'>
                                    <span class='completed'><%= el.todo %></span>
                                    <span class='<%= el.completed === false ? 'completed' : 'not del fa fa-trash-alt'%>'></span>
                                    <% } %>
                                </li>
                        <% }) %>    
                        </ul>
                </div>
            </div>
        </div> 
    </div>

    
  

    

    


    <script src="js/main.js"></script>

    <!--Bootstrap and Popper Scripts-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.5/dist/umd/popper.min.js" integrity="sha384-Xe+8cL9oJa6tN/veChSP7q+mnSPaj5Bcu9mPX5F5xIGE0DVittaqT5lorf0EI7Vk" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.min.js" integrity="sha384-ODmDIVzN+pFdexxHEHFBQH3/9/vQ9uori45z4JjnFsRydbmQbmL5t1tQ0culUzyK" crossorigin="anonymous"></script>
</body>
</html>